@model List<Scheduling.Models.Allocation>

<h2>Search Allocations</h2>

<form method="get" asp-action="ViewAllocations" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchInstructor" class="form-control" placeholder="Enter instructor name"
               value="@ViewBag.SearchInstructor" />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Course</th>
            <th>Section</th>
            <th>Instructor</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var allocation in Model)
        {
            <tr>
                <td>@allocation.Course.Name</td>
                <td>@allocation.Section.Name</td>
                <td>@allocation.Instructor.FullName</td>
                <td>
                    <a href="@Url.Action("ReassignInstructor", new { sectionId = allocation.SectionId, courseId = allocation.CourseId })"
                       class="btn btn-sm btn-primary open-reassign-modal"
                       data-bs-toggle="modal"
                       data-bs-target="#reassignModal">
                        Reassign Instructor
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>
<!-- Modal with iframe -->
<div class="modal fade" id="reassignModal" tabindex="-1" aria-labelledby="reassignModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content rounded-4">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="reassignModalLabel">Reassign Instructor</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0" style="height: 80vh;">
                <iframe id="reassignFrame" src="" width="100%" height="100%" frameborder="0" class="border-0 rounded-bottom"></iframe>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const modal = document.getElementById('reassignModal');
            const iframe = document.getElementById('reassignFrame');

            document.querySelectorAll('.open-reassign-modal').forEach(button => {
                button.addEventListener('click', function (e) {
                    e.preventDefault();
                    const url = this.getAttribute('href');
                    iframe.src = url;
                });
            });

            // Optional: Clear iframe when modal is hidden
            modal.addEventListener('hidden.bs.modal', () => {
                iframe.src = '';
            });
        });
    </script>
}
