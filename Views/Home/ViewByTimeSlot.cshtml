@model IEnumerable<Scheduling.Models.Schedule>

<h2 class="text-center mb-4 text-dark font-weight-bold">Schedules for the Selected Category</h2>

<div class="table-responsive">
    <table class="table table-hover table-striped rounded-lg overflow-hidden">
        <thead class="bg-primary text-white">
            <tr>
                <th class="p-3 border-0">Course</th>
                <th class="p-3 border-0">Instructor</th>
                <th class="p-3 border-0">Section</th>
                <th class="p-3 border-0">Time Slot</th>
                <th class="p-3 border-0">Day</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var schedule in Model)
            {
                <tr>
                    <td class="p-3 border-bottom">@schedule.Allocation.Course.Name</td>
                    <td class="p-3 border-bottom">@schedule.Allocation.Instructor.FullName</td>
                    <td class="p-3 border-bottom">@schedule.Allocation.Section.Name</td>
                    <td class="p-3 border-bottom">@schedule.TimeSlot.From - @schedule.TimeSlot.To</td>
                    <td class="p-3 border-bottom">@schedule.TimeSlot.DaysOfWeek.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>