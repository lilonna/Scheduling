@{
}
@model List<Scheduling.Models.Schedule>
@{
    ViewData["Title"] = "Schedule by Section";
}
<h2>Schedule for Section: @ViewBag.Section</h2>
<table class="table">
    <thead>
        <tr>
            <th>Course</th>
            <th>Instructor</th>
            <th>Time Slot</th>
            <th>Day</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Allocation.Course.Name</td>
                <td>@s.Allocation.Instructor.FullName</td>
                <td>@s.TimeSlot.From - @s.TimeSlot.To</td>
                <td>@s.TimeSlot.DaysOfWeek.Name</td>
            </tr>
        }
    </tbody>
</table>
