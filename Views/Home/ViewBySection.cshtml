@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Schedules by Section";
}

<h1>Schedules by Section</h1>

@foreach (var batch in Model)
{
    <h2>Batch: @batch.BatchName</h2>

    @foreach (var sectionGroup in batch.Sections)
    {
        <h3>Section: @sectionGroup.Section.Name</h3>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Course</th>
                    <th>Instructor</th>
                    <th>Day</th>
                    <th>Time</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var schedule in sectionGroup.Schedules)
                {
                    <tr>
                        <td>@schedule.Allocation.Course.Name</td>
                        <td>@schedule.Allocation.Instructor.FullName</td>
                        <td>@schedule.TimeSlot.DaysOfWeek.Name</td>
                        <td>@($"{schedule.TimeSlot.From:hh\\:mm} - {schedule.TimeSlot.To:hh\\:mm}")</td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
    }
}
