@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Schedules by Section";
}

<h1>Schedules by Section</h1>

@foreach (var group in Model)
{
    <h2>Section: @group.Section.Name (Batch: @group.Section.Batch.Name)</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Course</th>
                <th>Instructor</th>
                <th>Day</th>
                <th>Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var schedule in group.Schedules)
            {
                <tr>
                    <td>@schedule.Allocation.Course.Name</td>
                    <td>@schedule.Allocation.Instructor.FullName</td>
                    <td>@schedule.TimeSlot.DaysOfWeek.Name</td>
                    <td>@($"{schedule.TimeSlot.From:hh\\:mm} - {schedule.TimeSlot.To:hh\\:mm}")</td>
                </tr>
            }
        </tbody>
    </table>
    <br />
}
