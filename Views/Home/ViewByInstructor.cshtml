@model List<Scheduling.Models.Schedule>

@{
    ViewData["Title"] = "Schedules by Batch";
    var groupedByInstructor = Model.GroupBy(s => s.Allocation.Instructor); // group schedules by Batch
}

<h2>Schedules by Instructor</h2>

@foreach (var instructorGroup in groupedByInstructor)
{
    <h3>Batch: @instructorGroup.Key.FullName</h3> <!-- Batch Name Title -->

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Section</th>
                <th>Course</th>
                <th>Batch</th>
                <th>Day</th>
                <th>Start - End</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var schedule in instructorGroup)
            {
                <tr>
                    <td>@schedule.Allocation.Section.Name</td>
                    <td>@schedule.Allocation.Course.Name</td>
                    <td>@schedule.Allocation.Section.Batch.Name</td>
                    <td>@schedule.TimeSlot.DaysOfWeek.Name</td>
                    <td>@($"{schedule.TimeSlot.From:hh\\:mm} - {schedule.TimeSlot.To:hh\\:mm}")</td>
                </tr>
            }
        </tbody>
    </table>

    <br /> <!-- Add some spacing between tables -->
}
