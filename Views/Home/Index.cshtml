@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="bg-primary bg-gradient text-white py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h1 class="display-4 mb-4 fw-bold">Welcome to Class Scheduling</h1>
                <p class="lead mb-5">Efficiently manage and generate academic schedules with our powerful system</p>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="py-5">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8 text-center">
                <h2 class="fw-bold mb-3">Powerful Features</h2>
                <p class="lead text-muted">Everything you need to create the perfect academic schedule</p>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow border-0">
                    <div class="card-body text-center p-4">
                        <div class="fs-1 mb-3 text-primary">
                            <i class="fas fa-chalkboard-teacher"></i>
                        </div>
                        <h5 class="card-title">Instructor Management</h5>
                        <p class="card-text">Easily manage teaching staff, assign courses, and track instructor availability.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow border-0">
                    <div class="card-body text-center p-4">
                        <div class="fs-1 mb-3 text-primary">
                            <i class="fas fa-book-open"></i>
                        </div>
                        <h5 class="card-title">Course Catalog</h5>
                        <p class="card-text">Comprehensive course management with prerequisites, requirements, and department mapping.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow border-0">
                    <div class="card-body text-center p-4">
                        <div class="fs-1 mb-3 text-primary">
                            <i class="fas fa-calendar-check"></i>
                        </div>
                        <h5 class="card-title">Smart Scheduling</h5>
                        <p class="card-text">AI-powered algorithm creates optimal schedules with zero conflicts.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>