@{
}
@model List<Scheduling.Models.Schedule>

<form asp-action="SwapSchedules" method="post">
    <label for="scheduleId1">Schedule 1:</label>
    <select id="scheduleId1" name="scheduleId1">
        @foreach (var schedule in Model)
        {
            <option value="@schedule.Id">
                @schedule.Allocation.Instructor.FullName - @schedule.TimeSlot.DaysOfWeek.Name @schedule.TimeSlot.From.("hh\\:mm")
            </option>
        }
    </select>

    <label for="scheduleId2">Schedule 2:</label>
    <select id="scheduleId2" name="scheduleId2">
        @foreach (var schedule in Model)
        {
            <option value="@schedule.Id">
                @schedule.Allocation.Instructor.FullName - @schedule.TimeSlot.DaysOfWeek.Name @schedule.TimeSlot.From.("hh\\:mm")
            </option>
        }
    </select>

    <button type="submit">Swap Schedules</button>
</form>

