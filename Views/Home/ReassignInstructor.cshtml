@model Scheduling.Models.Allocation

@{
    ViewData["Title"] = "Reassign Instructor";
    var instructors = ViewBag.Instructors as List<Scheduling.Models.Instructor>;
}

<h2>Reassign Instructor</h2>

<form asp-action="ReassignInstructor" method="post">
    <input type="hidden" name="sectionId" value="@Model.SectionId" />
    <input type="hidden" name="courseId" value="@Model.CourseId" />

    <div class="form-group">
        <label>Current Instructor:</label>
        <input type="text" class="form-control" value="@Model.Instructor.FullName" readonly />
    </div>

    <div class="form-group">
        <label>New Instructor:</label>
        <select class="form-control" name="newInstructorId" required>
            <option value="">-- Select Instructor --</option>
            @foreach (var instructor in instructors)
            {
                <option value="@instructor.Id">@instructor.FullName</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Reassign</button>
    <a asp-action="Generated" class="btn btn-secondary">Cancel</a>
</form>

