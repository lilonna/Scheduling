<h2>Reassign Instructor</h2>

<form asp-action="ReassignInstructor" method="post">
    <input type="hidden" name="sectionId" value="@ViewBag.SectionId" />
    <input type="hidden" name="courseId" value="@ViewBag.CourseId" />

    <div class="mb-3">
        <label>Course:</label>
        <strong>@ViewBag.CourseName</strong>
    </div>

    <div class="mb-3">
        <label>Section:</label>
        <strong>@ViewBag.SectionName</strong>
    </div>

    <div class="mb-3">
        <label for="newInstructorId">Select Instructor:</label>
        <select class="form-control" id="newInstructorId" name="newInstructorId" required>
            @foreach (var instructor in (List<Scheduling.Models.Instructor>)ViewBag.Instructors)
            {
                <option value="@instructor.Id">@instructor.FullName</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Reassign</button>
</form>
