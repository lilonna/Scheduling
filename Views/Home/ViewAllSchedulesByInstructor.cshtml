@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Schedules by Instructor";
}

<h1>Schedules by Instructor</h1>

@foreach (var group in Model)
{
    <h2>@group.Instructor.FullName</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Course</th>
                <th>Section</th>
                <th>Day</th>
                <th>Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var schedule in group.Schedules)
            {
                <tr>
                    <td>@schedule.Allocation.Course.Name</td>
                    <td>@schedule.Allocation.Section.Name</td>
                    <td>@schedule.TimeSlot.DaysOfWeek.Name</td>
                    <td>@($"{schedule.TimeSlot.From:hh\\:mm} - {schedule.TimeSlot.To:hh\\:mm}")</td>
                </tr>
            }
        </tbody>
    </table>
    <br />
}
