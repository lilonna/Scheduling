
@{
    ViewData["Title"] = "Section Room Assignments";
}

<form asp-action="GenerateSectionRoomAssignments" method="post" class="m-0">
    <button type="submit" class="btn btn-link nav-link text-white fw-bold d-flex align-items-center p-0" style="font-size: 18px;">
        <i class="fas fa-door-open me-2"></i>Assign Rooms
    </button>
</form>

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header text-white" style="background-color: rgb(45, 108, 162);">
            <h2 class="mb-0">Section Room Assignments</h2>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-bordered mb-0">
                    <thead class="thead-light">
                        <tr>
                            <th class="align-middle">Section Name</th>
                            <th class="align-middle">Room Number</th>
                            <th class="align-middle">Block</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var section in Model)
                        {
                            <tr>
                                <td class="align-middle">@(section.Name)</td>
                                <td class="align-middle">@(section.Room?.RoomNumber ?? "Not Assigned")</td>
                                <td class="align-middle">@(section.Room?.Block?.Name ?? "-")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
      
    </div>
</div>